---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: any;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={entry.data.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{entry.data.title}</title>
  </head>
  <body class="page-container">
    <nav class="navigation">
      <div class="nav-container">
        <div class="nav-content">
          <a href="/" class="nav-brand"> üéØ Mindset schl√§gt Grosskonzern </a>
          <div class="nav-links">
            <a href="/" class="nav-link">Home</a>
            <a href="/blog" class="nav-active">Meine Geschichte</a>
            <a href="/beweise" class="nav-link">Beweise</a>
          </div>
        </div>
      </div>
    </nav>

    <article class="content-main">
      <div class="container">
        <header class="article-header">
          <div class="article-meta">
            <time class="article-date">
              {entry.data.pubDate.toLocaleDateString("de-DE")}
            </time>
          </div>

          <h1 class="article-title">
            {entry.data.title}
          </h1>

          <p class="article-description">
            {entry.data.description}
          </p>

          {
            entry.data.tags && (
              <div class="article-tags">
                {entry.data.tags.map((tag) => (
                  <span class="article-tag">{tag}</span>
                ))}
              </div>
            )
          }
        </header>

        <div class="article-content">
          <div class="prose-container">
            <Content />
          </div>
        </div>

        <div class="article-footer">
          <a href="/blog" class="back-link"> ‚Üê Zur√ºck zu allen Artikeln </a>
        </div>
      </div>
    </article>
  </body>
</html>
