      <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-lg p-8 md:p-12">
        <div class="prose prose-lg prose-invert mx-auto">
          <Content />
        </div>
      </div>

      <div class="mt-12 text-center">
        <a 
          href="/blog"
          class="inline-flex items-center text-blue-400 font-semibold hover:text-blue-300"
