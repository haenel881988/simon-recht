      <header class="text-center mb-12">
        <div class="mb-4">
          <time class="text-sm text-gray-400">
            {entry.data.pubDate.toLocaleDateString('de-DE')}
          </time>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {entry.data.title}
        </h1>
        
