---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allBlogPosts = await getCollection("blog", ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allBlogPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="Blog - Mindset schl√§gt Grosskonzern"
  description="Blog - Mindset schl√§gt Grosskonzern"
>
  <div class="hero">
    <div class="container">
      <h1 class="hero-title">üìñ Meine Geschichte</h1>
      <p class="hero-subtitle">
        Wie ich einen Grosskonzern besiegte - mit Mindset und KI
      </p>
    </div>
  </div>

  <div class="container">
    <div class="blog-grid">
      {
        sortedPosts.map((post) => (
          <article class="blog-card">
            <div class="blog-card-content">
              <div class="blog-card-meta">
                <time>{post.data.pubDate.toLocaleDateString("de-DE")}</time>
                {post.data.tags && (
                  <div class="mt-1">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="blog-card-meta">{tag}</span>
                    ))}
                  </div>
                )}
              </div>

              <h2 class="blog-card-title">
                <a href={`/blog/${post.slug}`} class="blog-card-link">
                  {post.data.title}
                </a>
              </h2>

              <p class="blog-card-excerpt">{post.data.description}</p>

              <a href={`/blog/${post.slug}`} class="blog-card-link">
                Weiterlesen ‚Üí
              </a>
            </div>
          </article>
        ))
      }
    </div>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary"> ‚Üê Zur√ºck zur Startseite </a>
    </div>
  </div>
</Layout>
