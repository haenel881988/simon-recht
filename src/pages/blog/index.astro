---
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog", ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allBlogPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Blog - Mindset schl√§gt Grosskonzern" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog - Mindset schl√§gt Grosskonzern</title>
  </head>
  <body class="page-container">
    <nav class="navigation">
      <div class="nav-container">
        <div class="nav-content">
          <a href="/" class="nav-brand"> üéØ Mindset schl√§gt Grosskonzern </a>
          <div class="nav-links">
            <a href="/" class="nav-link">Home</a>
            <a href="/blog" class="nav-active">Meine Geschichte</a>
            <a href="/beweise" class="nav-link">Beweise</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="content-main">
      <div class="container">
        <div class="page-header">
          <h1 class="page-title">üìñ Meine Geschichte</h1>
          <p class="page-subtitle">
            Wie ich einen Grosskonzern besiegte - mit Mindset und KI
          </p>
        </div>

        <div class="blog-grid">
          {
            sortedPosts.map((post) => (
              <article class="blog-card">
                <div class="blog-meta">
                  <time class="blog-date">
                    {post.data.pubDate.toLocaleDateString("de-DE")}
                  </time>
                  {post.data.tags && (
                    <div class="blog-tags">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="blog-tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>

                <h2 class="blog-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>

                <p class="blog-description">{post.data.description}</p>

                <a href={`/blog/${post.slug}`} class="blog-link">
                  Weiterlesen ‚Üí
                </a>
              </article>
            ))
          }
        </div>

        <div class="page-footer">
          <a href="/" class="back-link"> ‚Üê Zur√ºck zur Startseite </a>
        </div>
      </div>
    </div>
  </body>
</html>
