---
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allBlogPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Blog - Mindset schl√§gt Grosskonzern" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blog - Mindset schl√§gt Grosskonzern</title>
</head>
<body class="bg-gray-900 text-white">
  <nav class="bg-black shadow-lg border-b border-gray-700">
    <div class="max-w-4xl mx-auto px-8 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="text-xl font-bold text-white">
          üéØ Mindset schl√§gt Grosskonzern
        </a>
        <div class="flex space-x-6">
          <a href="/" class="text-gray-300 hover:text-white">Home</a>
          <a href="/blog" class="text-white">Meine Geschichte</a>
          <a href="/beweise" class="text-gray-300 hover:text-white">Beweise</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="min-h-screen bg-gray-900 py-12">
    <div class="max-w-4xl mx-auto px-8">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-white mb-4">
          üìñ Meine Geschichte
        </h1>
        <p class="text-xl text-gray-300">
          Wie ich einen Grosskonzern besiegte - mit Mindset und KI
        </p>
      </div>

      <div class="grid gap-8">
        {sortedPosts.map((post) => (
          <article class="bg-gray-800 border border-gray-700 rounded-lg shadow-lg p-8 hover:shadow-xl hover:bg-gray-750 transition">
            <div class="flex items-center justify-between mb-4">
              <time class="text-sm text-gray-400">
                {post.data.pubDate.toLocaleDateString('de-DE')}
              </time>
              {post.data.tags && (
                <div class="flex gap-2">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="bg-blue-900 text-blue-200 text-xs px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
            
            <h2 class="text-2xl font-bold text-white mb-4 hover:text-blue-400">
              <a href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h2>
            
            <p class="text-gray-300 mb-6">
              {post.data.description}
            </p>
            
            <a 
              href={`/blog/${post.slug}`}
              class="inline-flex items-center text-blue-400 font-semibold hover:text-blue-300"
            >
              Weiterlesen ‚Üí
            </a>
          </article>
        ))}
      </div>

      <div class="mt-12 text-center">
        <a 
          href="/"
          class="inline-flex items-center text-gray-400 hover:text-gray-200"
        >
          ‚Üê Zur√ºck zur Startseite
        </a>
      </div>
    </div>
  </div>
</body>
</html>
