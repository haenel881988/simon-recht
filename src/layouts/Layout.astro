---
export interface Props {
  title: string;
}

const { title } = Astro.props;

// Import CSS direkt in Astro
import "../styles/global.css";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Mindset schlägt Grosskonzern - Wie ich einen Grosskonzern juristisch in die Schranken wies"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Header mit Design-Vorgaben: Dunkelblauer Hintergrund (#1E3A8A) -->
    <header>
      <nav>
        <div class="container">
          <div class="nav-container">
            <!-- Logo links: Simon Haenel -->
            <a href="/" class="nav-brand"> Simon Haenel </a>
            <!-- Desktop-Menü (Burger-Menü wird später implementiert) -->
            <div class="nav-menu">
              <a href="/">Startseite</a>
              <a href="/blog">Über mich</a>
              <a href="/blog">Blog</a>
              <a href="#kontakt">Kontakt</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Hauptinhalt -->
    <main>
      <slot />
    </main>

    <!-- Footer mit Design-Vorgaben: Dunkelblauer Hintergrund (#1E3A8A) -->
    <footer>
      <div class="container footer-container">
        <div class="footer-main">
          <p class="footer-title">
            <strong>Simon Haenel</strong> - Informatiker, der mit KI eine Pensionskasse
            besiegte
          </p>
          <p class="footer-subtitle">
            Gerichtsurteil BV.2024.00062 - Der Beweis, dass Mindset Grosskonzern
            schlägt
          </p>
          <p class="footer-updated">
            Aktualisiert am: {new Date().toLocaleString("de-CH")}
          </p>
        </div>

        <!-- Rechtliche Links -->
        <div class="footer-links">
          <a href="/impressum">Impressum</a>
          <a href="/datenschutz">Datenschutz</a>
          <a href="/disclaimer">Disclaimer</a>
        </div>

        <!-- Social Media Links -->
        <div class="footer-social">
          <a
            href="https://www.facebook.com/profile.php?id=100016063715869"
            target="_blank"
            rel="noopener noreferrer"
          >
            Facebook
          </a>
          <a
            href="https://www.instagram.com/simonhaenel8/"
            target="_blank"
            rel="noopener noreferrer"
          >
            Instagram
          </a>
          <a
            href="https://www.linkedin.com/in/simon-haenel/"
            target="_blank"
            rel="noopener noreferrer"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
