---
export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Mindset schlägt Grosskonzern - Wie ich einen Grosskonzern juristisch in die Schranken wies",
} = Astro.props;

// Import CSS direkt in Astro - MASTER LAYOUT FÜR ALLE SEITEN
import "../styles/global.css";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO-OPTIMIERTE META-TAGS -->
    <meta name="author" content="Simon Haenel" />
    <meta
      name="keywords"
      content="Mindset gegen Grosskonzern, Pensionskasse besiegen, juristische Erfolgsgeschichte, IT-Experte Recht, Sozialversicherungsrecht"
    />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="de" />

    <!-- OPEN GRAPH (Social Media) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta
      property="og:site_name"
      content="Simon Haenel - Mindset schlägt Grosskonzern"
    />

    <!-- TWITTER CARDS -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- SCHEMA.ORG STRUCTURED DATA -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Simon Haenel",
        "jobTitle": "IT-Experte und Rechts-Stratege",
        "description": "IT-Experte, der mit systematischem Mindset eine Pensionskasse vor Gericht besiegte",
        "url": "https://simon-recht.ch",
        "sameAs": ["https://linkedin.com/in/simon-haenel"]
      }
    </script>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Navigation nach Header-Definition: NUR 4 Elemente -->
    <header class="layout-header">
      <nav class="navbar">
        <div class="navbar-container">
          <!-- Logo/Brand: Links "Simon Haenel" -->
          <a href="/" class="navbar-brand">Simon Haenel</a>
          <!-- Navigation Menu: Rechts - Exakt nach Definition -->
          <ul class="navbar-nav">
            <li><a href="/" class="navbar-link">Startseite</a></li>
            <li><a href="/ueber-mich" class="navbar-link">Über mich</a></li>
            <li><a href="/blog" class="navbar-link">Blog</a></li>
            <li><a href="/kontakt" class="navbar-link">Kontakt</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Hauptinhalt Container -->
    <main class="layout-main">
      <slot />
    </main>

    <!-- Footer nach 3-Farben-Regel -->
    <footer class="layout-footer footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-main">
            <p class="footer-title">
              <strong>Simon Haenel</strong> - IT-Experte, der eine Pensionskasse
              juristisch besiegte
            </p>
            <p class="footer-subtitle">
              Gerichtsurteil BV.2024.00062 - Der Beweis, dass Mindset
              Grosskonzern schlägt
            </p>
          </div>

          <!-- Rechtliche Links -->
          <div class="footer-links">
            <a href="/impressum" class="footer-link">Impressum</a>
            <a href="/datenschutz" class="footer-link">Datenschutz</a>
            <a href="/disclaimer" class="footer-link">Disclaimer</a>
          </div>

          <!-- Social Media Links -->
          <div class="footer-social">
            <a
              href="https://www.facebook.com/profile.php?id=100016063715869"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link"
            >
              Facebook
            </a>
            <a
              href="https://www.instagram.com/simonhaenel8/"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link"
            >
              Instagram
            </a>
            <a
              href="https://www.linkedin.com/in/simon-haenel/"
              target="_blank"
              rel="noopener noreferrer"
              class="footer-link"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
