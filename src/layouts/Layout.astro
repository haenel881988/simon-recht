---
export interface Props {
  title: string;
}

const { title } = Astro.props;

// Import CSS direkt in Astro
import "../styles/global.css";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Mindset schlägt Grosskonzern - Wie ich einen Grosskonzern juristisch in die Schranken wies"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Header mit Design-Vorgaben: Dunkelblauer Hintergrund (#1E3A8A) -->
    <header>
      <nav>
        <div class="container">
          <div
            style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 0;"
          >
            <!-- Logo links: Simon Haenel -->
            <a href="/" style="font-size: 1.25rem; font-weight: bold;">
              Simon Haenel
            </a>
            <!-- Desktop-Menü (Burger-Menü wird später implementiert) -->
            <div style="display: flex; gap: 2rem;">
              <a href="/">Startseite</a>
              <a href="/blog">Über mich</a>
              <a href="/blog">Blog</a>
              <a href="#kontakt">Kontakt</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Hauptinhalt -->
    <main>
      <slot />
    </main>

    <!-- Footer mit Design-Vorgaben: Dunkelblauer Hintergrund (#1E3A8A) -->
    <footer>
      <div class="container" style="text-align: center; padding: 3rem 0;">
        <div style="margin-bottom: 2rem;">
          <p style="font-weight: 600; margin-bottom: 0.5rem;">
            <strong>Simon Haenel</strong> - Informatiker, der mit KI eine Pensionskasse
            besiegte
          </p>
          <p style="opacity: 0.8; margin-bottom: 1rem;">
            Gerichtsurteil BV.2024.00062 - Der Beweis, dass Mindset Grosskonzern
            schlägt
          </p>
          <p style="opacity: 0.7; font-size: 0.875rem;">
            Aktualisiert am: {new Date().toLocaleString("de-CH")}
          </p>
        </div>

        <!-- Rechtliche Links -->
        <div
          style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem; margin-bottom: 1.5rem; font-size: 0.875rem;"
        >
          <a href="/impressum">Impressum</a>
          <a href="/datenschutz">Datenschutz</a>
          <a href="/disclaimer">Disclaimer</a>
        </div>

        <!-- Social Media Links -->
        <div style="display: flex; justify-content: center; gap: 1.5rem;">
          <a
            href="https://www.facebook.com/profile.php?id=100016063715869"
            target="_blank"
            rel="noopener noreferrer"
          >
            Facebook
          </a>
          <a
            href="https://www.instagram.com/simonhaenel8/"
            target="_blank"
            rel="noopener noreferrer"
          >
            Instagram
          </a>
          <a
            href="https://www.linkedin.com/in/simon-haenel/"
            target="_blank"
            rel="noopener noreferrer"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
